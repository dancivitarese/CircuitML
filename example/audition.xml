<LpuSpecification xmlns="http://www.neuroml.org/schema/neuroml2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="cml_v1.xsd" id="channel">
	<expOneSynapse id="syn_jon" erev="0mV" gbase="65nS"
	tauDecay="3ms" />
	<iafCell id="osn" reset="-70mV" C="0.03 nF" thresh="-25mV"
	leakConductance="1 uS" leakReversal="-50mV" />
	<network id="JON">
		<population id="JONA" component="pn" size="100" />
        <population id="JONB" component="R" size="150" />
		<projection id="LpuInput_JONA">
			<source population="LpuInput" />
			<target population="JONA" />
			<synapticConnection from="LpuInput[0]" to="JONA[0]" synapse="syn_jon" />
			<synapticConnection from="LpuInput[1]" to="JONA[1]" synapse="syn_jon" />
		</projection>
        <projection id="LpuInput_JONB">
            <source population="LpuInput" />
            <target population="JONB" />
            <synapticConnection synapse="syn_osn" />
        </projection>

	</network>
</LpuSpecification>